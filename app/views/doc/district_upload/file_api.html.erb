<html>
  <head>
    <title>SIMS District Upload- examples.csv</title>
  <style type="text/css">
  th,td {  
border-width: 1px 0px 0px 0px;
border-style: solid;
padding: 25px;
}
span.append_file_name {
  color: blue;
}

  </style>
</head>
  <body>
    <h1> SIMS District Upload- <%=@importer.file_name %></h1>
    <table>
      <tr>
        <th> File Name </th>
        <td><%=@importer.file_name %> &nbsp;  (This must match exactly) &nbsp; <span class="append_file_name"><%=@importer.file_name_with_append %> </span></td>
      </tr>
 

      <% %w{description fields load_order overwritten removed how_often how_many_rows append_info}.each do |field| %>
      <tr>
        <th><%=field.titleize %> </th>
        <td><%=@importer.try field %> </td>
      </tr>
    <% end %>

      <tr>
        <th>Empty File</th>
        <td><%=link_to @importer.file_name,"/district_upload/empty/#{@importer.file_name}" %> <br />
        <%=link_to(@importer.file_name_with_append,"/district_upload/empty/#{@importer.file_name_with_append}")  if @importer.supports_append? %>
        </td>
      </tr>

      <tr>
        <th>Sample File</th>
        <td><%=link_to_if_present @importer.file_name,"/district_upload/sample/#{@importer.file_name}"  %> <br />
        <%=link_to(@importer.file_name_with_append,"/district_upload/sample/#{@importer.file_name_with_append}")  if @importer.supports_append? %>
        </td>
      </tr>

      <tr>
        <th>Related Files </th>
        <td> <%=render :partial => 'doc/district_upload/related', :object => @importer, :locals => {:method => :related} %>

          <% if @importer.name == "CSVImporter::LanguageartsSystemFlags" and File.exist? "#{Rails.public_path}/system/jonas_sample_test_data.csv" %>
            <br />
            <%= link_to "jonas_sample_test_data.csv", "/system/jonas_sample_test_data.csv" %> (Right click and Save)
          <% end %>
      </td>
      </tr>

      <tr>
        <th>Alternate Files </th>
        <td> <%=render :partial => 'doc/district_upload/related', :object => @importer, :locals => {:method => :alternate} %>  </td>
      </tr>



      <tr>
        <th>Upload Responses </th>
        <td><%=@importer.upload_responses %> </td>
      </tr>

      <tr>
        <th>Field Detail</th>
        <td>
          <dl>
            <% @importer.csv_headers.each do |field| %>
              <dt><%= field %></dt> <dd><%= @importer::FIELD_DESCRIPTIONS[field] %> </dd>
            <% end %>

           </dl>

         </td>
       </tr>
       </table>


       <a href="../district_upload">Back to list of files</a>
  </body>
</html>
