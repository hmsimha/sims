<div id="objectives" class="form_row">
<% if @objective_definitions %>
  <%= form_for :objective_definition, :remote => true,
    :url => interventions_objectives_path(@goal_definition,
                                                 :custom_intervention => custom_intervention?) do |f| %>
                                                   <%= f.label(:id, 'Assign Objective') %>
    <%= f.collection_select(:id, @objective_definitions,:id,:title,{:prompt=>''},{:onchange=>"$('spinnerobjectives').show();simulate(this.form,'submit')", :class=>"fixed_width"}) %>
    <%= spinner("objectives") %>
    <%= content_tag :noscript,  submit_tag("Choose Objective") %>
  <% end %>
<% end %>
</div>
<%= render :partial=>"interventions/categories/select" %>
