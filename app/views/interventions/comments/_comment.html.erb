<% readonly ||= (readonly? || false) %>

<% if comment.changed? %>
  <%= render "interventions/comments/edit_js", :comment => comment, :readonly => readonly %>
  <%= render("interventions/comments/comment_row", :comment => InterventionComment.find(comment), :readonly => readonly, :hidden => 'hidden_comment') unless comment.new_record? %>
<% else %>
  <%= render "interventions/comments/comment_row", :comment => comment, :readonly => readonly, :hidden => '' %>
<% end %>

