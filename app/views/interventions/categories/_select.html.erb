<div id="categories" class ="form_row">
<% if categories %>
  <%= form_tag new_path(:goal_id=>@goal_definition, :objective_id => @objective_definition),
      :remote => true do %>
      <%= label_tag :category_id, 'Assign Category' %>
      <%= category_select %>
    <%= spinner("categories") %>
    <%= content_tag :noscript, submit_tag("Choose Category") %><br />
    <div id="category_description"><%=description(@intervention_cluster) %></div>
  <% end %>
<% end %>
</div>
<br class="brclear" />
<%= render :partial => 'interventions/definitions/select' %>
