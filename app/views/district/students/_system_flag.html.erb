<div class="system_flag item">
  <%= f.error_messages %>
  <p>
    <%=f.label :category%>
    <%= f.select(:category,Flag::FLAGTYPES.collect{|h,k| [k[:humanize],h]} ) %>
    <%=f.label :reason %> <%= f.text_field :reason %>
    <%=f.hidden_field :id %>
    <%=f.hidden_field :_destroy %>
  <%= link_to "Remove", "#", :class => "remove"%>
</p>
</div>

