<h1>Listing behavior_referrals</h1>

<table>
  <tr>
    <th>School</th>
    <th>Student</th>
    <th>End year</th>
    <th>Recorder</th>
    <th>Reported by</th>
    <th>Motivation</th>
    <th>Behavior</th>
    <th>Admin decision</th>
    <th>Half days of suspension</th>
    <th>Time</th>
    <th>Location</th>
    <th>Other</th>
  </tr>

<% @behavior_referrals.each do |behavior_referral| %>
  <tr>
    <td><%=h behavior_referral.school %></td>
    <td><%=h behavior_referral.student %></td>
    <td><%=h behavior_referral.end_year %></td>
    <td><%=h behavior_referral.recorder_id %></td>
    <td><%=h behavior_referral.reported_by %></td>
    <td><%=h behavior_referral.motivation %></td>
    <td><%=h behavior_referral.behavior %></td>
    <td><%=h behavior_referral.admin_decision %></td>
    <td><%=h behavior_referral.half_days_of_suspension %></td>
    <td><%=h behavior_referral.time %></td>
    <td><%=h behavior_referral.location %></td>
    <td><%=h behavior_referral.other %></td>
    <td><%= link_to 'Show', [@school,behavior_referral] %></td>
    <td><%= link_to 'Edit', edit_school_behavior_referral_path(@school,behavior_referral) %></td>
    <td><%= link_to 'Destroy', [@school,behavior_referral], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New behavior_referral', new_school_behavior_referral_path(@school) %>
