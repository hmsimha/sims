<h1>Assign Special Group User</h1>
<%= remote_form_for(@special_user_group) do |f| %>
  <%=  f.error_messages %>
  <%= f.collection_select(:user_id,@users, :id,:to_s) %>
  <%=f.check_box :is_principal %><%= f.label :is_principal%>
  <%= f.hidden_field :grade unless @special_user_group.grade.nil?%>
  <p>
    <%= f.submit "Assign User" %>
  </p>
<% end %>
