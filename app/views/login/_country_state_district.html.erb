<div id="choose_country">
  <% unless @countries.blank? %>
    <%= form_for @country , :url => {:controller=>"login", :action=>"choose_country"} do |f| %>
      <fieldset>
        <div class="form_row">
          <label for="country">Country</label>
          <%= f.collection_select(:id, @countries, :id, :name,{}, {:onchange=>"this.form.submit()"}) %>
          <%= content_tag(:noscript, submit_tag("Choose Country"))%>
        </div>
      </fieldset>
    <% end %>
  <% end %>
</div>

<div id="choose_state">
  <% unless @states.blank? %>
    <%= form_for @state , :url => {:controller=>"login", :action=>"choose_state"} do |f| %>
      <fieldset>
        <div class ="form_row">
          <label for="state">State</label>
          <%=f.collection_select(:id, @states, :id, :name,{}, {:onchange=>"this.form.submit()"}) %>
          <%= content_tag(:noscript, submit_tag("Choose State"))%>
        </div>
      </fieldset>
    <% end %>
  <% end %>
</div>

